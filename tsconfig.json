{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "outDir": "dist",
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "sourceMap": false,
        "inlineSourceMap": true,
        "inlineSources": true,
        "incremental": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        ".",
        "src",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}